color cyan/blue white/blue
foreground EE0000
background 400000
#splashimage /boot/grub/kanotix.xpm.gz
gfxmenu /boot/grub/message

setkey y y
setkey z z
setkey Y Y
setkey Z Z
setkey equal equal
setkey parenright parenright
setkey parenleft parenleft
setkey doublequote doublequote
setkey plus plus
setkey minus minus
setkey slash slash
setkey ampersand ampersand
setkey percent percent
setkey underscore underscore
setkey question question
setkey semicolon semicolon
setkey less less
setkey numbersign numbersign
setkey colon colon
setkey greater greater
setkey asterisk asterisk

title BACK - Standard options
configfile /boot/grub/menu.lst

title  Expert Mode - DMA off - English
kernel /boot/vmlinuz BOOT_IMAGE=expert ramdisk_size=100000 init=/etc/init lang=de-utf8 apm=power-off nomce nodma
initrd /boot/miniroot.gz

title  Framebuffer Mode 1280x1024 - English
kernel /boot/vmlinuz ramdisk_size=100000 init=/etc/init lang=us-utf8 apm=power-off vga=794 xmodule=fbdev nomce quiet
initrd /boot/miniroot.gz

title  Framebuffer Mode 1024x768 - English
kernel /boot/vmlinuz ramdisk_size=100000 init=/etc/init lang=us-utf8 apm=power-off vga=791 xmodule=fbdev nomce quiet
initrd /boot/miniroot.gz

title  Framebuffer Mode 800x600 - English
kernel /boot/vmlinuz ramdisk_size=100000 init=/etc/init lang=us-utf8 apm=power-off vga=788 xmodule=fbdev nomce quiet
initrd /boot/miniroot.gz

title  Failsafe - English
kernel /boot/vmlinuz ramdisk_size=100000 init=/etc/init lang=us-utf8 vga=normal nosound noapic noscsi nodma noapm nousb nopcmcia nofirewire noagp nomce nodhcp xmodule=vesa
initrd /boot/miniroot.gz

title  ACPI on - DMA on - FB off - English
kernel /boot/vmlinuz ramdisk_size=100000 init=/etc/init lang=us-utf8 apm=power-off vga=normal nomce quiet
initrd /boot/miniroot.gz

title  ACPI on - DMA on - Console only - English
kernel /boot/vmlinuz ramdisk_size=100000 init=/etc/init lang=us-utf8 apm=power-off nomce quiet 2
initrd /boot/miniroot.gz

title  ACPI off - DMA off - Console only - English
kernel /boot/vmlinuz ramdisk_size=100000 init=/etc/init lang=us-utf8 apm=power-off nomce quiet acpi=off nodma 2

title MEMTEST - Memtest86+
kernel /boot/memtest.bin

title BOOT - Floppy
chainloader (fd0)+1

title BOOT - 1st HD 1st Partition
chainloader (hd0,0)+1

title BOOT - 2nd HD 1st Partition
chainloader (hd1,0)+1

title BOOT - 2nd HD 1st Partition (swapped)
map (hd0) (hd1)
map (hd1) (hd0)
chainloader (hd1,0)+1

title BOOT - HD Install from /dev/hda2
kernel (hd0,1)/boot/vmlinuz ro root=/dev/hda2 apm=power-off nomce
