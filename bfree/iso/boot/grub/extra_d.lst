color cyan/blue white/blue
foreground EE0000
background 400000
#splashimage /boot/grub/kanotix.xpm.gz
gfxmenu /boot/grub/message

setkey y z
setkey z y
setkey Y Z
setkey Z Y
setkey equal parenright
setkey parenright parenleft
setkey parenleft asterisk
setkey doublequote at
setkey plus bracketright
setkey minus slash
setkey slash ampersand
setkey ampersand percent
setkey percent caret
setkey underscore question
setkey question underscore
setkey semicolon less
setkey less numbersign
setkey numbersign backslash
setkey colon greater
setkey greater bar
setkey asterisk braceright

title BACK - Standardoptionen
configfile /boot/grub/menu.lst

title  Expert Mode - DMA off - Deutsch
kernel /boot/vmlinuz BOOT_IMAGE=expert ramdisk_size=100000 init=/etc/init lang=de-utf8 apm=power-off nomce nodma
initrd /boot/miniroot.gz

title  Framebuffer Mode 1280x1024 - Deutsch
kernel /boot/vmlinuz ramdisk_size=100000 init=/etc/init lang=de-utf8 apm=power-off vga=794 xmodule=fbdev nomce quiet
initrd /boot/miniroot.gz

title  Framebuffer Mode 1024x768 - Deutsch
kernel /boot/vmlinuz ramdisk_size=100000 init=/etc/init lang=de-utf8 apm=power-off vga=791 xmodule=fbdev nomce quiet
initrd /boot/miniroot.gz

title  Framebuffer Mode 800x600 - Deutsch
kernel /boot/vmlinuz ramdisk_size=100000 init=/etc/init lang=de-utf8 apm=power-off vga=788 xmodule=fbdev nomce quiet
initrd /boot/miniroot.gz

title  Failsafe - Deutsch
kernel /boot/vmlinuz ramdisk_size=100000 init=/etc/init lang=de-utf8 vga=normal nosound noapic noscsi nodma noapm nousb nopcmcia nofirewire noagp nomce nodhcp xmodule=vesa
initrd /boot/miniroot.gz

title  ACPI on - DMA on - FB off - Deutsch
kernel /boot/vmlinuz ramdisk_size=100000 init=/etc/init lang=de-utf8 apm=power-off vga=normal nomce quiet
initrd /boot/miniroot.gz

title  ACPI on - DMA on - Nur Konsole - Deutsch
kernel /boot/vmlinuz ramdisk_size=100000 init=/etc/init lang=de-utf8 apm=power-off nomce quiet 2
initrd /boot/miniroot.gz

title  ACPI off - DMA off - Nur Konsole - Deutsch
kernel /boot/vmlinuz ramdisk_size=100000 init=/etc/init lang=de-utf8 apm=power-off nomce quiet acpi=off nodma 2
initrd /boot/miniroot.gz

title MEMTEST - Memtest86+
kernel /boot/memtest.bin

title BOOT - Diskettenlaufwerk
chainloader (fd0)+1

title BOOT - 1. HD 1. Partition
chainloader (hd0,0)+1

title BOOT - 2. HD 1. Partition
chainloader (hd1,0)+1

title BOOT - 2. HD 1. Partition (vertauscht)
map (hd0) (hd1)
map (hd1) (hd0)
chainloader (hd1,0)+1

title BOOT - HD Install von /dev/hda2
kernel (hd0,1)/boot/vmlinuz ro root=/dev/hda2 apm=power-off nomce
