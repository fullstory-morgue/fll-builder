#FLL_BUILD_LANG="de es fr it ja pt ru zhcn"
FLL_BUILD_LANG=""
for lang in $FLL_BUILD_LANG; do
  KDE_LANG="$KDE_LANG
kde-i18n-$lang
koffice-i18n-$lang"
  BASE="$BASE
manpages-$lang
"
done

DISTRO_KDE="$DISTRO_KDE
$KDE_EXTRA
$KDE_LANG
"

