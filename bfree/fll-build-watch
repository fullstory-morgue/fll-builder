#!/bin/bash
BUILDSRC="/root/sidux"
MYD=$(pwd)
cd $BUILDSRC
BUILDT=$(ls -art $BUILDSRC | grep -v squashfs | grep ^[[:digit:]]*$ | grep -v ^\\. | tail -n 1)
#echo "BUILDT:$BUILDT"
BUILD=$BUILDSRC/$BUILDT
#echo "BUILD:$BUILD"
LOG=$BUILDSRC/log/$BUILDT
#echo "LOG:$LOG"
TAILOPT="-n 20"
#ls -l $BUILD.squashfs
#ls -l log/$BUILD/fll-build-log
#ls -l log/$BUILD/cdebootstrap

if [ -e $BUILD.squashfs ]; then
  ls -lh *.squashfs | tail -n 2
  ps aux | grep mksquashfs | grep $BUILD
elif [ -e $LOG/fll-build-log ]; then
  cd $LOG/fll-build-log
  ls -art . | tail -n 1
  ls -art | tail -n 1 | xargs tail $TAILOPT
elif [ -e $BUILD/root/fll-build-log ]; then
  cd $BUILD/root/fll-build-log
  ls -art . | tail -n 1
  ls -art . | tail -n 1 | xargs tail $TAILOPT
elif [ -e log/$BUILDT/cdebootstrap ]; then
  tail $TAILOPT log/$BUILDT/cdebootstrap
fi
echo
echo
echo
tail $TAILOPT $BUILDSRC/build.log
cd $MYD

