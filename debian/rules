#!/usr/bin/make -f
  
include /usr/share/cdbs/1/rules/debhelper.mk

install/distro-defaults::
	install -D -m 0644 etc/default/distro \
		debian/distro-defaults/etc/default/distro

install/fll-builder::
	# scripts
	install -D -m 0755 fll-build.bash \
		debian/fll-builder/usr/sbin/fll-build
	for bm in usr/share/fll-builder/functions.d/*.bm; do \
		install -D -m 0644 $$bm debian/fll-builder/$$bm; \
	done
	# exclude file
	install -D -m 0644 usr/share/fll-builder/exclusion_list \
		debian/fll-builder/usr/share/fll-builder/exclusion_list
	# config file
	install -D -m 0644 etc/fll-builder/fll-build.conf \
		debian/fll-builder/etc/fll-builder/fll-build.conf
	# package lists
	for bm in etc/fll-builder/packages/*.bm \
		etc/fll-builder/packages/packages.d/*.bm; do \
		install -D -m 0644 $$bm debian/fll-builder/$$bm; \
	done
	# templates
	cp -a usr/share/fll-builder/templates \
		debian/fll-builder/usr/share/fll-builder/
