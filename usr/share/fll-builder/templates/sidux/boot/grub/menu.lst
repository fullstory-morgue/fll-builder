default 0
timeout 30
color red/black light-red/black
foreground EE0000
background 400000
gfxmenu /boot/message

title  sidux Default
kernel /boot/vmlinuz ramdisk_size=100000 init=/etc/init lang=en quiet vga=791
initrd /boot/miniroot.gz

title  sidux Default (unionfs)
kernel /boot/vmlinuz ramdisk_size=100000 init=/etc/init lang=en quiet vga=791 unionfs
initrd /boot/miniroot.gz

title  sidux ACPI off - DMA off
kernel /boot/vmlinuz ramdisk_size=100000 init=/etc/init lang=en apm=power-off nomce quiet acpi=off nodma vga=791
initrd /boot/miniroot.gz

title  sidux APIC off
kernel /boot/vmlinuz ramdisk_size=100000 init=/etc/init lang=en apm=power-off nomce quiet nosmp noapic vga=791
initrd /boot/miniroot.gz

title  sidux Framebuffer Mode
kernel /boot/vmlinuz ramdisk_size=100000 init=/etc/init lang=en apm=power-off vga=791 xmodule=fbdev nomce quiet
initrd /boot/miniroot.gz

title  sidux Failsafe
kernel /boot/vmlinuz ramdisk_size=100000 init=/etc/init lang=en vga=normal nosound noapic noscsi nodma noapm nousb nopcmcia nofirewire noagp nomce nodhcp xmodule=vesa
initrd /boot/miniroot.gz

