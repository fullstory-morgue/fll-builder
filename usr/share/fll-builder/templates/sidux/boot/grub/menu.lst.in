default 0
timeout -1
color red/black light-red/black
foreground EE0000
background 400000
gfxmenu /boot/grub/message

title  sidux @arch@ Default (aufs)
kernel /boot/@vmlinuz@ boot=fll quiet vga=791
initrd /boot/@initrd@

title  sidux @arch@ Debug (aufs, serial console)
kernel /boot/@vmlinuz@ boot=fll quiet vga=791 aufs console=ttyS0,115200 console=tty
initrd /boot/@initrd@

title  sidux @arch@ Default (unionfs 2.x)
kernel /boot/@vmlinuz@ boot=fll quiet vga=791 unionfs 
initrd /boot/@initrd@

title  sidux @arch@ Debug (unionfs 2.x, serial console)
kernel /boot/@vmlinuz@ boot=fll quiet vga=791 unionfs console=ttyS0,115200 console=tty
initrd /boot/@initrd@

title  sidux @arch@ APIC off
kernel /boot/@vmlinuz@ boot=fll nomce quiet nosmp noapic vga=791 
initrd /boot/@initrd@

title  sidux @arch@ Framebuffer Mode
kernel /boot/@vmlinuz@ boot=fll vga=791 xmodule=fbdev nomce quiet 
initrd /boot/@initrd@

title  sidux @arch@ Failsafe
kernel /boot/@vmlinuz@ boot=fll vga=normal noacpi noapic nomce nosmp nousb nohz=off nohwsetup nocpufreq xmodule=vesa 
initrd /boot/@initrd@

title Main Menu
configfile /boot/grub/menu.lst
