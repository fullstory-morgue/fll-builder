#!/bin/bash

strap_chroot() {
	local MIRROR=${DEBOOTSTRAP_MIRROR:="http://ftp.debian.org/debian/"}
	local FLAVOUR=${DEBOOTSTRAP_FLAVOUR:="minimal"}

	cdebootstrap --flavour="$FLAVOUR" sid "$FLL_BUILD_CHROOT" "$MIRROR"

	return $?
}

strap_chroot

# cleanup unrequired packages (from live-package)
chroot_exec "dpkg --purge cdebootstrap-helper-diverts"
